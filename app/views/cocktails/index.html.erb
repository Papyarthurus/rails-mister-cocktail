<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12">
    <div class="restaurant-card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('https://unsplash.it/500/200/?random');">
        <div class="card-name">
          <h2><%= cocktail.name %></h2>
        </div>
        <%= link_to '', cocktail, class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
